<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_ground_bt_blue_2x"
            >
        <ImageView
                android:id="@+id/photo_btBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_back_2x"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/ataFleetTow"
                style="@style/text_while"
                android:textSize="@dimen/_20dp"
                />
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/photo_tvFreeCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Call:"
                style="@style/text_while"
                android:textSize="@dimen/_25dp"
                android:layout_centerInParent="true"/>
        <TextView
                android:id="@+id/photo_tvNumberPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1800 633 990"
                style="@style/text_while"
                android:textSize="@dimen/_25dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/photo_tvFreeCall"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_ground_bt_blue_2x"
                android:layout_centerInParent="true"
                android:layout_below="@+id/photo_tvNumberPhone"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="vertical"
                android:gravity="center"
                android:minHeight="60dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_while"
                    android:textSize="@dimen/_20dp"
                    android:text="Call Tow Truck"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_while"
                    android:textSize="@dimen/_20dp"
                    android:text="1800 633 990"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>