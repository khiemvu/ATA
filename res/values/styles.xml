<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Black.NoTitleBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="text_while">   <!-- Bold, 41px, White #ffffff, 255 255 255 -->
        <item name="android:textSize">@dimen/_20dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:paddingLeft">@dimen/_5dp</item>
    </style>

    <style name="PhotoGridLayout">
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:listSelector">@drawable/photogrid_list_selector</item>
    </style>
    <style name="TextShowOnButton">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogTitleStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>